{% extends 'base.html.twig' %} {% block title %}Symfony Articles{% endblock %}
{% block body %}
<h1>Articles</h1>
<p>My name is {{ name }}</p>

{% if articles %}
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Article Title
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    {% for article in articles %}
    <tr>
      <td>
        {{ article }}
      </td>
      <td>
        <a href="/article/1" class="btn btn-dark"> Show</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>No articles to display</p>
{% endif %} {% endblock %}
